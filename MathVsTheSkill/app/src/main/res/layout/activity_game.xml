<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="@drawable/menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/headGame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Tiempo"
                    android:textStyle="bold"
                    android:textColor="#31EC31"
                    android:textSize="40sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntos"
                    android:textStyle="bold"
                    android:textColor="#D37529"
                    android:textSize="40sp"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/headCounters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clockPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="40dp"
                    android:text="1:00"
                    android:textStyle="bold"
                    android:textColor="#31EC31"
                    android:textSize="40sp"/>



                <TextView
                    android:id="@+id/puntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="60dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#D37529"
                    android:textSize="40sp"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_marginTop="50sp"
            android:id="@+id/btnsOpts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/btnOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <Button
                        android:id="@+id/btnPrimero"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="150sp"
                        android:background="@drawable/boomb_button"
                        android:text="    1"
                        android:textColor="#FA1E01"
                        android:textSize="50sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnSegundo"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="200sp"
                        android:background="@drawable/boomb_button"
                        android:text="    2"
                        android:textColor="#FA1E01"
                        android:textSize="50sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnTercero"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/boomb_button"
                        android:text="    3"
                        android:textColor="#FA1E01"
                        android:textSize="50sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnCuarto"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="100sp"
                        android:background="@drawable/boomb_button"
                        android:text="    4"
                        android:textColor="#FA1E01"
                        android:textSize="50sp"
                        android:textStyle="italic" />

                </GridLayout>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/normalProblems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/basicProblems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 x 0 ="
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                    <EditText
                        android:id="@+id/respuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:hint="R"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="#100F10"
                        android:textSize="40sp"/>


                </GridLayout>


                <ImageView
                    android:id="@+id/snap"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/snap"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/fractProblems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/txtFra1A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="-50dp"
                        android:text="0"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-20dp"
                        android:text="__"
                        android:textColor="#100F10"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/txtFra1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                </GridLayout>

                <TextView
                    android:id="@+id/signoFra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="2dp"
                    android:text="+"
                    android:textColor="#100F10"
                    android:textSize="40sp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/txtFra2A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="-50dp"
                        android:text="0"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-20dp"
                        android:text="__"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                    <TextView
                        android:id="@+id/txtFra2B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:text="="
                    android:textColor="#100F10"
                    android:textSize="40sp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="2">

                    <EditText
                        android:id="@+id/respuestaA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-38dp"
                        android:ems="2"
                        android:hint="R"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="#100F10"
                        android:textSize="35sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-25dp"
                        android:text="-------"
                        android:textSize="40sp"
                        android:textColor="#100F10"/>

                    <EditText
                        android:id="@+id/respuestaB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:hint="R"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="#100F10"
                        android:textSize="35sp"/>


                </GridLayout>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnResponder"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:background="@drawable/tnt_btn"
            android:textSize="25sp"
            android:layout_margin="30dp"
            android:padding="15dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/kaboom1"
            android:layout_width="100sp"
            android:layout_height="75sp"
            android:background="@drawable/poo1"/>
        <ImageView
            android:id="@+id/kaboom2"
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:background="@drawable/poo2"/>
        <ImageView
            android:id="@+id/kaboom3"
            android:layout_width="100sp"
            android:layout_height="85sp"
            android:background="@drawable/poo3"/>
        <ImageView
            android:id="@+id/kaboom4"
            android:layout_width="93sp"
            android:layout_height="120sp"
            android:background="@drawable/poo4"/>
        <ImageView
            android:id="@+id/kaboom5"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/poo5"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>